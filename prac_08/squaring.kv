BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '4.1'
            font_size: 50
            multiline: False
        Button:
            text: 'Square'
            font_size: 40
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)  # Pink color for the text
            text: app.output_text  # Bind text to the output_text property
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Enter a number and press "Square"'
            font_size: 38